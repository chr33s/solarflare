{
  "name": "@chr33s/solarflare",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    "./client": "./src/client.ts",
    "./server": "./src/server.ts",
    "./tsconfig.json": "./tsconfig.json",
    "./worker": "./src/worker.ts"
  },
  "bin": {
    "solarflare": "./src/cli.ts"
  },
  "scripts": {
    "build": "bun ./src/build.ts",
    "build:cli": "bun ./src/build-cli.ts",
    "check": "oxfmt --check && oxlint --type-aware && tsc --noEmit",
    "clean": "rm -rf dist",
    "dev": "bun ./src/build.ts --serve --watch",
    "fix": "oxfmt && oxlint --type-aware --fix"
  },
  "dependencies": {
    "@preact/signals": "^2.5.1",
    "diff-dom-streaming": "^0.6.6",
