  },
  "dependencies": {
    "preact": "^10.27.2",
    "preact-custom-element": "^4.6.0",
    "preact-render-to-string": "^6.6.1",
    "typescript": "~5.9.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "wrangler": "^4.53.0"
  }
}
