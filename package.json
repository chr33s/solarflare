{
  "name": "preactflare",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "bun build src/entry-client.tsx --entry-naming='[dir]/index.[ext]' --outdir=dist/client --target=browser && cp -aR ./public/. dist/client",
    "build:server": "bun build src/entry-server.tsx --entry-naming='[dir]/index.[ext]' --outdir=dist/server --packages=external --target=node",
    "clean": "rm -rf dist",
    "deploy": "bun wrangler deploy",
    "dev": "bun wrangler dev"
  },
  "dependencies": {
    "preact": "^10.27.2",
    "preact-render-to-string": "^6.6.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "typescript": "~5.9.2",
    "wrangler": "^4.53.0"
  }
}
