    "preact-custom-element": "^4.6.0",
    "preact-render-to-string": "^6.6.4",
    "turbo-stream": "^3.1.0"
  },
  "devDependencies": {
    "@preact/signals-debug": "^1.0.3",
    "@types/bun": "^1.3.4",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "playwright": "^1.57.0",
    "typescript": "~5.9.3",
    "wrangler": "^4.55.0"
  },
  "engines": {
    "node": ">=22.18.0"
  }
