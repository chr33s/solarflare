{
  "name": "solarflare",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "imports": {
    "#app/*": "./src/app/*",
    "#solarflare/*": "./src/framework/*"
  },
  "exports": {
    "./client": "./src/framework/client.tsx",
    "./server": "./src/framework/server.tsx",
    "./worker": "./src/framework/worker.tsx"
  },
  "bin": {
    "solarflare": "./bin/solarflare.ts"
  },
  "scripts": {
    "build": "bun ./src/framework/build.ts",
    "build:cli": "bun ./scripts/build-cli.ts",
    "check": "oxfmt --check && oxlint --type-aware && tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "wrangler deploy",
    "dev": "bun ./src/framework/build.ts --serve --watch",
    "fix": "oxfmt && oxlint --type-aware --fix",
    "start": "wrangler dev"
  },
  "dependencies": {
    "@preact/signals": "^2.5.1",
    "diff-dom-streaming": "^0.6.6",
    "preact": "^10.28.0",
    "preact-custom-element": "^4.6.0",
    "preact-render-to-string": "^6.6.4",
    "turbo-stream": "^3.1.0"
  },
  "devDependencies": {
    "@preact/signals-debug": "^1.0.3",
    "@types/bun": "^1.3.4",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "typescript": "~5.9.3",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
