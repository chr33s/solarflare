{
  "name": "@chr33s/solarflare",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "bin": "./src/build.ts",
  "files": [
    "src",
    "tsconfig.json",
    "!src/*.test.ts"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/solarflare.d.ts"
    },
    "./client": "./src/client.ts",
    "./server": "./src/server.ts",
    "./tsconfig.json": "./tsconfig.json",
    "./worker": "./src/worker.ts"
  },
  "scripts": {
    "check": "oxfmt --check && oxlint --type-aware --type-check",
    "fix": "oxlint --type-aware --type-check --fix && oxfmt --write",
    "test": "WRANGLER_LOG=error; node --test src/*.test.ts"
  },
  "dependencies": {
    "@preact/signals": "2.5.1",
    "lightningcss": "1.30.2",
    "preact": "10.28.2",
    "preact-custom-element": "4.6.0",
    "preact-render-to-string": "6.6.5",
    "rolldown": "1.0.0-beta.59",
    "turbo-stream": "3.1.0"
  },
  "devDependencies": {
    "@preact/signals-debug": "1.0.3",
    "@types/node": "25.0.6",
    "oxfmt": "0.23.0",
    "oxlint": "1.38.0",
    "oxlint-tsgolint": "0.11.0",
    "playwright": "1.57.0",
    "typescript": "5.9.3",
    "wrangler": "4.58.0"
  },
  "optionalDependencies": {
    "ts-morph": "27.0.2"
  },
  "engines": {
    "node": ">=24.12.0"
  }
}
